{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "Mongo": {
      "type": "container.v0",
      "connectionString": "mongodb://{Mongo.bindings.tcp.host}:{Mongo.bindings.tcp.port}",
      "image": "docker.io/library/mongo:7.0",
      "bindMounts": [
        {
          "source": "../../../../../mongodata",
          "target": "/data/db",
          "readOnly": false
        }
      ],
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "port": 52158,
          "targetPort": 27017
        }
      }
    },
    "KoggoDb": {
      "type": "value.v0",
      "connectionString": "{Mongo.connectionString}/KoggoDb"
    },
    "Api": {
      "type": "project.v0",
      "path": "../KoggoInvestments.Api/KoggoInvestments.Api.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{Api.bindings.http.targetPort}",
        "ConnectionStrings__KoggoDb": "{KoggoDb.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "Worker": {
      "type": "project.v0",
      "path": "../KoggoInvestments.Worker/KoggoInvestments.Worker.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ConnectionStrings__KoggoDb": "{KoggoDb.connectionString}",
        "services__FinnApi__default__0": "https://finnhub.io/",
        "services__PolyApi__default__0": "https://api.polygon.io/"
      }
    }
  }
}